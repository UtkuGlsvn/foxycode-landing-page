        link(href='css/styles.css', rel='stylesheet')
        
    body

        // Navigation
        nav.navbar.navbar-light.bg-light.static-top
            .container
                .row.w-100.justify-content-center
                .col-lg-4.text-center
                    img(src='assets/img/foxylogo.png', alt='foxycode icon')
                    a.navbar-brand(href='#!') FoxyCodeStudios                                                   
                script(type='text/javascript').
                    function googleTranslateElementInit() {
                    new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
                    }
                script(type='text/javascript' src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit')


        // Masthead
        header.masthead
            .container.position-relative            
                .row.justify-content-center
                    .col-xl-6
                        .text-center.text-white
                            // Page heading
                            h1.mb-5 Change, Innovate, Iterate, Inspire. That's Us, That's FoxyCode.  

        // ShowCase
        section.showcase
            .container-fluid.p-0
                .row.g-0
                    .col-lg-6.order-lg-2.text-white.showcase-img(style="background-image: url('assets/img/whofoxycode.jpg');")
