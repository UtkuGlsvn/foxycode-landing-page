        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        <meta name="description" content="FoxyCode Studios - FoxyCode: Your One-Stop Solution for Mobile Apps, Games, Digital Marketing, and Customized Websites and Apps. Transform your digital presence with our expertise." />
        meta(name='author', content='FoxyCode Studios')

        title FoxyCodeStudios - Mobile/Game Application

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/img/foxylogo.png')

